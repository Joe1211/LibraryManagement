<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <ThresholdFilter level="WARN" onMatch="ACCEPT"
                             onMismatch="DENY" />
            <PatternLayout pattern="%date{yyyy-MM-dd HH:mm:ss.SSS} %level [%thread][%file:%line] - %msg%n" />
        </Console>
        <RollingFile name="dealFile" fileName="D:/clzlog/clz_oper/err/info.log"
                     filePattern="D:/clzlog/clz_oper/err/$${date:yyyy-MM-dd}/HF-%d{MM-dd-yyyy}-%i.gz">
            <PatternLayout pattern="[Time]\:[%d{HH:mm:ss.SSS}] [%t] %n%msg%n%n" />
            <SizeBasedTriggeringPolicy size="5MB" />
            <DefaultRolloverStrategy max="300" />
        </RollingFile>
        <RollingFile name="sqlFile" fileName="D:/clzlog/clz_oper/info/info.log"
                     filePattern="D:/clzlog/clz_oper/info/$${date:yyyy-MM-dd}/HF-%d{MM-dd-yyyy}-%i.gz">
            <PatternLayout pattern="[Time]\:[%d{HH:mm:ss.SSS}] [%t] %n%msg%n%n" />
            <SizeBasedTriggeringPolicy size="5MB" />
            <DefaultRolloverStrategy max="300" />
        </RollingFile>
    </appenders>
    <loggers>
        <AsyncLogger name="errinfo" level="info" includeLocation="false">
            <AppenderRef ref="dealFile" />
        </AsyncLogger>
        <AsyncLogger name="info" level="info" includeLocation="false">
            <AppenderRef ref="sqlFile" />
        </AsyncLogger>
        <root level="error">
            <appender-ref ref="Console" />
        </root>
    </loggers>
</configuration>
